### Gaming Optimizations (2026-02-08) - Disable Effects for Games
# Blur/shadows kill FPS - disable for all game windows

# Steam game windows - NO compositor effects + AGGRESSIVE Mouse confinement
# Match both steam_app_* AND direct .x86_64 executables
for_window [class="steam_app_.*"] {
    shadows disable
    blur disable
    corner_radius 0
    shortcuts_inhibitor enable
    focus on_window_activation focus
    fullscreen enable                           # FORCE fullscreen (confines mouse)
    inhibit_idle focus                          # Keep display on while focused
}

# Arc Raiders specific - Proper mouse capture
for_window [class="steam_app_1808500"] {
    shadows disable
    blur disable
    corner_radius 0
    shortcuts_inhibitor enable
    focus on_window_activation focus
    inhibit_idle focus
}

# Native Linux games (*.x86_64) launched through Steam
for_window [class=".*\.x86_64$"] {
    shadows disable
    blur disable
    corner_radius 0
    shortcuts_inhibitor enable
    focus on_window_activation focus
    fullscreen enable                           # FORCE fullscreen (confines mouse)
    inhibit_idle focus
}

# Megabonk specific (native Linux game)
for_window [class="Megabonk.x86_64"] {
    shadows disable
    blur disable
    corner_radius 0
    shortcuts_inhibitor enable
    focus on_window_activation focus
    fullscreen enable
    inhibit_idle focus
}

# Any window that's a child of Steam and fullscreen
for_window [title="^.*$" workspace=".*"] {
    inhibit_idle fullscreen
}

# Fullscreen games - inhibit idle/screensaver
for_window [app_id=".*"] inhibit_idle fullscreen
for_window [class=".*"] inhibit_idle fullscreen

# Proton/Wine games (Windows games via Steam Play)
for_window [instance="steam_app_.*"] {
    shadows disable
    blur disable
    corner_radius 0
    shortcuts_inhibitor enable
    focus on_window_activation focus
    fullscreen enable
    inhibit_idle focus
}

for_window [title=".*\\.exe$"] {
    shadows disable
    blur disable
    corner_radius 0
    shortcuts_inhibitor enable
    focus on_window_activation focus
    fullscreen enable
    inhibit_idle focus
}

# Specific games
for_window [class="Deadlock"] {
    shadows disable
    blur disable
    corner_radius 0
    shortcuts_inhibitor enable
    focus on_window_activation focus
    fullscreen enable
    inhibit_idle focus
}
